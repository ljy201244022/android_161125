<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.yurynoh.myapplication.MainActivity">

    <TextView
        android:id="@+id/label_startChkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Want to Start This App?"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/startChkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start" />

    <CheckBox
        android:text="No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/label_animalGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What Is Your Favorite AndroidVersion?"
            android:textAlignment="center"
            />

        <RadioGroup
            android:id="@+id/animalGroup"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:checkedButton="@+id/dog">

            <RadioButton
                android:id="@+id/dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Gellybean(4.3)" />

            <RadioButton
                android:id="@+id/cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="kitket(4.4)" />

            <RadioButton
                android:id="@+id/bunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lollipop(5.0)" />

        </RadioGroup>

        <Button
            android:id="@+id/commit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Select" />

        <Button
            android:text="Exit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" />

        <Button
            android:text="Reset"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

        <ImageView
            android:id="@+id/animalImage"
            android:layout_width="match_parent"
            android:layout_height="187dp"/>
    </LinearLayout>
</LinearLayout>
